#ifndef _TIME__
#define _TIME__

namespace nsname {

class CTime
{
private:
    int hour;
    int minute;
    int second;
public:
    int GetHour();
    int GetMin();
    int GetSec();
    void SetHour(int h);
    void SetMin(int m);
    void SetSec(int s);
    void SetTime(int h, int m, int s);
    void ShowTime();
    void addHour(int);
    void addMin(int);
    void addSec(int);
};

} // end of namespace nsname
#endif // __TIME__
